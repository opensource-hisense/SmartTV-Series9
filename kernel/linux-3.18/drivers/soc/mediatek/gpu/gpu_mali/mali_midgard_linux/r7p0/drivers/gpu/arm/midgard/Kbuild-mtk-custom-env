$(info mali MTK evironment)
#build support for a ARM Mali Midgard GPU
CONFIG_MALI_MIDGARD := m

CONFIG_MALI_PLATFORM_THIRDPARTY := n
#CONFIG_MALI_PLATFORM_THIRDPARTY_NAME := mt860
CONFIG_MALI_PLATFORM_FAKE := y

ifeq ($(CONFIG_MACH_MT5891), y)
CONFIG_MALI_PLATFORM_MT860 := y
ccflags-y += -DCONFIG_MALI_PLATFORM_MT860
endif

ifeq ($(CONFIG_MACH_MT5890), y)
CONFIG_MALI_PLATFORM_MT624 := y
ccflags-y += -DCONFIG_MALI_PLATFORM_MT624
endif

$(info GPU MT860=$(CONFIG_MALI_PLATFORM_MT860) , MT624=$(CONFIG_MALI_PLATFORM_MT624) )

CONFIG_MALI_DEBUG := y
ccflags-y += -DCONFIG_MALI_PLATFORM_FAKE -DCONFIG_MALI_BACKEND=gpu
#ccflags-y += -DCONFIG_MALI_MIDGARD_DVFS 
ccflags-y += -DCONFIG_MALI_GATOR_SUPPORT
# kds only for linux part ####
ccflags-y += -DCONFIG_KDS
